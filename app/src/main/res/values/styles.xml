<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ToolbarTitleAppearance">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="TextInputLayoutHint" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
    </style>

    <style name="TextInputEditText" parent="Widget.MaterialComponents.TextInputEditText.FilledBox">
        <item name="hintAnimationEnabled">false</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:textCursorDrawable">"@null"</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundMode">filled</item>
        <item name="boxBackgroundColor">?attr/colorSurfaceVariant</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="BottomNavigationAppearance" parent="TextAppearance.MaterialComponents.Caption" >
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>
      
    <style name="TheBiggestTitleText">
        <item name="android:textSize">32sp</item>
        <item name="fontFamily">@font/ys_display_bold</item>
        <item name="fontWeight">700</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="TeamNameText">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="fontWeight">500</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginHorizontal">@dimen/margin_16</item>
        <item name="android:layout_marginVertical">@dimen/margin_8</item>
    </style>
    
    <style name="TextWarning">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:textSize">22sp</item>
    </style>
    
    <style name="ResponseSearchText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:background">@drawable/bg_text_responce_search</item>
        <item name="android:paddingHorizontal">@dimen/padding_12</item>
        <item name="android:paddingVertical">@dimen/padding_4</item>
        <item name="android:layout_marginTop">@dimen/margin_3</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>
    
    <style name="Regular16Text">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>
    <style name="Regular12Text">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>


    <style name="Medium16Text">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:fontWeight">500</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="Medium22Text" parent="Medium16Text">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="FullTextInputLayout" parent="TextInputLayout">
        <item name="boxBackgroundMode">filled</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/margin_16</item>
        <item name="android:paddingVertical">@dimen/padding_8</item>
        <item name="endIconDrawable">@drawable/ic_search</item>
        <item name="endIconMode">custom</item>
        <item name="endIconTint">@color/black</item>
        <item name="hintEnabled">false</item>
        <item name="hintTextAppearance">@style/TextInputLayoutHint</item>
    </style>

    <style name="FullTextInputEditText" parent="TextInputEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:inputType">text</item>
        <item name="android:textCursorDrawable">@drawable/blue_cursor</item>
    </style>

    <style name="SelectButton">
        <item name="android:layout_width">@dimen/margin_24</item>
        <item name="android:layout_height">@dimen/margin_24</item>
        <item name="android:background">?attr/colorSurface</item>
        <item name="android:layout_gravity">center_vertical|end</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginHorizontal">@dimen/margin_16</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="iconSize">@dimen/margin_24</item>
    </style>

    <style name="ErrorImageView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:scaleType">centerInside</item>
        <item name="layout_constraintVertical_chainStyle">packed</item>
        <item name="marginHorizontal">@dimen/margin_16</item>
        <item name="android:layout_marginBottom">@dimen/margin_16</item>
    </style>
    
    <style name="ErrorTextView" parent="TextWarning">\
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="marginHorizontal">@dimen/margin_16</item>
    </style>

    <style name="WorkTerritoriesItemText">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/gray</item>
    </style>

</resources>
