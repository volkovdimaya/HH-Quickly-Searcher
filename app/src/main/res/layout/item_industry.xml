<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/industryName"
        style = "@style/Regular16Text"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginVertical="@dimen/margin_16"
        tools:text="@string/could_not_get_list"/>

    <ToggleButton
        android:id="@+id/industrySelect"
        style="@style/SelectButton"
        android:layout_gravity="center_vertical|end"
        android:contentDescription="@null"
        android:drawableStart="@drawable/ic_radio_button_on_off_selector_24px"
        android:textOff=""
        android:textOn=""/>

</LinearLayout>
